<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mhd.com.btcsmartsteward.Activity.SettingActivity_setinterval">
    <TextView
        android:id="@+id/gaojiatixing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="高价提醒" />

    <EditText
        android:id="@+id/gaojiatixing_value"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/gaojiatixing"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#DADDE5"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/dijiatixing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/gaojiatixing"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="低价提醒" />

    <EditText
        android:id="@+id/dijiatixing_value"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/dijiatixing"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/gaojiatixing_value"
        android:background="#DADDE5"
        android:inputType="numberDecimal"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/submit_setting_setinterval"
        android:layout_below="@+id/dijiatixing_value"
        android:text="确认"
        android:textColor="@color/white"
        android:background="#427DDB"
        android:layout_marginTop="15dp"
        android:onClick="onBtnClick"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>
