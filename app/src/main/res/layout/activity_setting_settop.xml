<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mhd.com.btcsmartsteward.Activity.SettingActivity_settop">
    <TextView
        android:id="@+id/huichefudu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="回撤幅度" />

    <EditText
        android:id="@+id/huichefudu_value"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/huichefudu"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#DADDE5"
        android:inputType="numberDecimal"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/submit_setting_settop"
        android:layout_below="@+id/huichefudu_value"
        android:text="确认"
        android:onClick="onBtnClick"
        android:textColor="@color/white"
        android:background="#427DDB"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
