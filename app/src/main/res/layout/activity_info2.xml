<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E6F4"
    tools:context="mhd.com.btcsmartsteward.Activity.InfoActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textSize="2sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/gnsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:keepScreenOn="true"
            android:text="助手功能说明"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_grey"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/helperinfo_qujian_tag"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/cirsquare"
            android:layout_below="@id/gnsm"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:text="价格区间监测" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/helperinfo_qujian"
            android:layout_below="@id/helperinfo_qujian_tag"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:layout_centerHorizontal="true"
            android:text="超出预设区间范围即自动提醒，无需时刻盯盘，灵活高效。更有防抖动算法确保提醒的准确性。"
            />
        <TextView
            android:id="@+id/helperinfo_chaodi_tag"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/cirsquare"
            android:layout_below="@id/helperinfo_qujian"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:text="跟踪抄底提醒" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/helperinfo_chaodi"
            android:layout_below="@id/helperinfo_chaodi_tag"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:layout_centerHorizontal="true"
            android:text="设置跟踪抄底提醒后，程序自动跟踪币价走势。触底反弹超过预设值时将触发提醒。"
            />
        <TextView
            android:id="@+id/helperinfo_zhiying_tag"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/cirsquare"
            android:layout_below="@id/helperinfo_chaodi"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:text="跟踪止盈提醒" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/helperinfo_zhiying"
            android:layout_below="@id/helperinfo_zhiying_tag"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:layout_centerHorizontal="true"
            android:text="设置跟踪止盈提醒后，程序自动跟踪币价走势。触顶回落超过预设值时将触发提醒。"
            />
    </RelativeLayout>

    <!-- This FrameLayout insets its children based on system windows using
             android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls2"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/dummy_button2"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ee427DDB"
                android:textColor="@color/white"
                android:onClick="onBackBtnClick"
                android:text="返回" />

        </LinearLayout>


    </FrameLayout>

</FrameLayout>
